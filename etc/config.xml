<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <getloy_magento_gateway>
                <active>1</active>
                <sandbox>1</sandbox>
                <model>GetloyMagentoGatewayFacade</model>
                <order_status>pending_payment</order_status>
                <payment_action>authorize</payment_action>
                <payway_title>Debit/Credit Card or ABA Pay</payway_title>
                <currency>USD</currency>
                <sort_order>1</sort_order>
                <can_use_checkout>1</can_use_checkout>
                <can_use_internal>1</can_use_internal>
                <can_authorize>0</can_authorize>
                <can_capture>0</can_capture>
                <can_void>1</can_void>
                <can_refund>0</can_refund>
                <can_cancel>1</can_cancel>
                <is_gateway>1</is_gateway>
                <getloy_merchant_key backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <payway_api_key_test backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <payway_api_key_prod backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
            </getloy_magento_gateway>
        </payment>
    </default>
</config>
